<header class="header">
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <!--            Логотип та всі предмети + кнопка-->
            <ul class="list-inline float-start">
                <li>
                    <a href="/" class="navbar-fluid" id="bigLogo">
                        <img src="/src/img/logo.svg" alt="Logo" class="logo_icon">
                    </a>
                </li>
                <li class="list-inline-item">
                    <span class="navbar-text">
                        <h4>Всі предмети</h4>
                    </span>
                </li>
                <li class="list-inline-item">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </li>
            </ul>
            <!--            Пошукова стрічка-->
            <form class="d-flex flex-fill p-5" role="search">
                <input type="search" class="form-control rounded-start-pill" type="search" placeholder="Пошук"
                       aria-label="Search" id="searchInput">
                <input type="image" src="/src/img/magnifying-glass-solid.svg" class="btn btn-outline-success rounded-end-pill icon_fif" id="searchButton"/>
            </form>
            <!--            Користувач, вподобання та кошик-->
            <ul class="list-inline float-end">
                <li class="nav-item">
                    <input class="icon_fif" type="image" src="/src/img/circle-user-solid.svg" id="userIcon"/>
                    <!--Максимум приблизно 15 символів, так що краще використати userName-->
                    <span class="userName text-center" id="userName"><%=username%></span>
                </li>
                <li class="nav-item list-inline-item">
                    <input class="icon_fif" type="image" src="/src/img/heart-solid.svg" id="savedItems"/>
                </li>
                <li class="nav-item list-inline-item position-relative">
                    <input class="icon_fif" type="image" src="/src/img/cart-shopping-solid.svg"/>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger mt-3" id="cartItem">
                        0
                        <span class="visually-hidden">unread messages</span>
                    </span>
                </li>
            </ul>
        </div>
    </nav>
    <!--    Вспливаюче вікно від всі предмети-->
    <div class="collapse navbar-collapse position-absolute z-3" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 bg-light nav-all-items border border-secondary rounded" id="allCategoryWindow">
            <li class="nav-item">
                <a class="nav-link" href="#">Будівельні матеріали</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Лакофарбові матеріали</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Електротовари</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Будівельні суміші</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Вікна</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Двері</a>
            </li>
        </ul>
    </div>
</header>