<body>
<%- include('C://Users//stasy//WebstormProjects//coursework//server//views//partials//header.ejs')%>
<nav class="navbar navbar-expand bg-body-tertiary mt-3">
    <div class="container-fluid">
        <span class="fw-bold fs-3">My account</span>
        <ul class="navbar-nav">
            <li class="nav-item me-3 ms-3">
                <a class="nav-link fs-3" href="/users/">My data</a>
            </li>
            <li class="nav-item me-3 ms-3">
                <a class="nav-link fs-3" href="/users/orders">My orders</a>
            </li>
            <li class="nav-item me-3 ms-3">
                <a class="nav-link current-menu fs-3" href="/users/saved">Saved products</a>
            </li>
        </ul>
    </div>
</nav>
<div id="savedItems" class="container">
    <div class="row">

        <%for(let el of savedItems){ %>
            <div class="col-auto my-2 item-col">
                <!--            Приклад одного предмета-->
                <div class="card item text-center" style="width: 15rem; position: relative;">
                    <a href="/product/<%=el.title%>" class="itemTitle">
                        <img src="<%=el.image%>" alt="Logo" class="bd-placeholder-img m-2" width="200" height="200">
                        <div class="car-body">
                            <h5 class="card-title pt-3 item-title"><%=el.title%></h5>
                        </div>
                    </a>
                    <div class="card-body">
                        <span><%=el.price%> ГРН</span>
                    </div>
                    <input class="position-absolute top-0 end-0 mt-2 me-2 remove-button" type="image" src="/src/img/xmark-solid.svg" width="30" height="30">
                </div>
            </div>
        <%} %>

    </div>
</div>
<script type="module" src="/js/header.js"></script>
<script type="module" src="/js/user-page-saved.js"></script>
</body>
